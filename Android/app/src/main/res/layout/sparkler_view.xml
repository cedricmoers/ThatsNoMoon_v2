<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:layout_weight="2"
                android:text="name"/>

            <TextView
                android:layout_width="0dp"
                android:id="@+id/foreignNameTextView"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:layout_weight="3"
                android:text="name"
                android:layout_marginLeft="25dp"
                android:gravity="left"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:layout_weight="1"
                android:text="Actual"
                android:gravity="end"/>

        </LinearLayout>


        <com.geekorations.thatsnomoon.Parameter
            android:layout_marginTop="5dp"
            android:id="@+id/brightnessParameter"
            android:layout_marginLeft="0dp"
            app:parameterName="Brightness"
            app:maxValue="1023"
            app:startValue="1023"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.geekorations.thatsnomoon.Parameter
            android:layout_marginTop="5dp"
            android:id="@+id/variationParameter"
            android:layout_marginLeft="0dp"
            app:parameterName="Variation"
            app:maxValue="511"
            app:startValue="200"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.geekorations.thatsnomoon.Parameter
            android:layout_marginTop="5dp"
            android:id="@+id/smoothingParameter"
            android:layout_marginLeft="0dp"
            app:parameterName="Smoothing"
            app:maxValue="1000"
            app:startValue="985"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:scaling="1000"/>


    </LinearLayout>

</merge>